<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.talkweb.smallvideo" version="1.0.0" 
xmlns="http://apache.org/cordova/ns/plugins/1.0" 
xmlns:android="http://schemas.android.com/apk/res/android">
    <name>小视频插件</name>
    <js-module name="smallvideo" src="www/smallvideo.js">
        <clobbers target="cordova.plugins.smallvideo" />
    </js-module>
	<platform name="android">
		
		<source-file src="src/SmallVideo.java" 
			target-dir="src/com/talkweb/smallvideo"/>
			
		<config-file target="res/xml/config.xml" parent="/*">
		  <feature name="SmallVideo">
			<param name="android-package" value="com.talkweb.smallvideo.SmallVideo"/>
		  </feature>
		</config-file>
		
		<config-file target="AndroidManifest.xml" parent="/manifest/application">
		  <activity android:name="com.mabeijianxi.smallvideorecord2.MediaRecorderActivity" />
		</config-file>
		
		<config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.CAMERA"/>
			<uses-permission android:name="android.permission.RECORD_AUDIO"/>
			<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
			<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
			<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
		</config-file>
		
		<framework src="src/smallvideo.gradle" custom="true" type="gradleReference"/>
		
		<resource-file src="src/SmallVideoLib2-release.aar" target="libs/SmallVideoLib2-release.aar"/>

  </platform>
</plugin>
